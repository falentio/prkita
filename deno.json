{
	"importMap": "./import_map.json",
	"fmt": {
		"files": {
			"include": ["src"]
		},
		"options": {
			"useTabs": true,
			"indentWidth": 4,
			"singleQuote": false,
			"lineWidth": 100
		}
	},
	"lint": {
		"files": {
			"include": ["src"]
		},
		"rules": {
			"tags": ["recommended"]
		}
	},
	"tasks": {
		"dev": "deno run -A --watch --no-check server.ts"
	}
}
